function getTypeIcon(type: string) {
  return type === "Azienda" ? Building2 : User
}

function getTypeColor(type: string) {
  return type === "Azienda" ? "bg-blue-500" : "bg-green-500"
}

function getStatusColor(status: string) {
  switch (status) {
    case "Attivo":
      return "default"
    case "Potenziale":
      return "secondary"
    case "In valutazione":
      return "outline"
    default:
      return "secondary"
  }
}

